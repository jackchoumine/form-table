{
  "name": "j-form-table",
  "description": "数据驱动的表单式组件",
  "version": "0.0.12",
  "license": "MIT",
  "author": "JackChou https://github.com/jackchoumine/",
  "private": false,
  "scripts": {
    "build:entry": "node build/build-entry.js",
    "serve": "vue-cli-service serve",
    "build:lib": "vue-cli-service build --target lib --name form-table --dest ./dist/ ./lib/index.js",
    "build:docs": "vue-cli-service build",
    "build": "npm run lint && npm run build:entry & npm run build:lib && npm run build:docs",
    "lint": "vue-cli-service --mode production lint lib/*",
    "release": "standard-version",
    "pub": "npm run build:lib && npm run release &&  npm publish --registry https://registry.npmjs.org && git push --follow-tags origin master && git push  --follow-tags gitee master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jackchoumine/form-table.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/form-table.umd.min.js",
  "keywords": [
    "table",
    "form-table",
    "table-form",
    "vue form",
    "vue-table"
  ],
  "dependencies": {
    "clone": "^2.1.2",
    "element-ui": "^2.15.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "cz-customizable": "^6.3.0",
    "core-js": "^3.6.5",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "sass": "^1.34.1",
    "sass-loader": "^10.2.0",
    "standard-version": "^7.0.0",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
